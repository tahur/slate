# Required
# Generate with:
# node -e "console.log(require('node:crypto').randomBytes(32).toString('hex'))"
BETTER_AUTH_SECRET=change-me-to-a-random-64-char-hex

# App URL â€” set this to your public URL in production
# SvelteKit adapter-node uses ORIGIN for CSRF protection
# Better Auth uses it as baseURL for auth callbacks
ORIGIN=http://localhost:3000

# Comma-separated list of additional trusted origins (CORS/auth callbacks).
# Keep localhost for local development.
BETTER_AUTH_TRUSTED_ORIGINS=http://localhost:3000

# Database
SLATE_DB_PATH=data/slate.db

# SMTP (optional, only needed for email features)
SMTP_HOST=
SMTP_USER=
SMTP_PASS=
SMTP_PORT=587
SMTP_FROM=
SMTP_SECURE=false
